{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm:vite\" \"npm:serve\" \"npm:queue\" \"npm:schedule\"",
        "vite": "vite",
        "serve": "php artisan serve",
        "queue": "php artisan queue:work --sleep=3 --tries=3",
        "schedule": "php artisan schedule:work",
        "prod": "npm run build && php artisan optimize && concurrently \"npm run queue\" \"npm run schedule\"",
        "build": "vite build"
    },
    "devDependencies": {
        "axios": "^1.7.4",
        "concurrently": "^9.2.1",
        "laravel-echo": "^2.2.6",
        "laravel-vite-plugin": "^1.0",
        "pusher-js": "^8.4.0",
        "vite": "^5.0"
    }
}